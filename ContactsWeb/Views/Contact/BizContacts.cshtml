@using System.Globalization
@model IEnumerable<ContactsWeb.Models.Contact>
@{
    ViewData["Title"] = ".biz Email kontakti";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="card-title mb-0">
                        Kontakti s .biz email adresama
                    </h2>
                    <small>Prikaz iz SQL View-a: BizEmailContacts</small>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Ime i prezime</th>
                                        <th>Email</th>
                                        <th>Telefon</th>
                                        <th>Web stranica</th>
                                        <th>Adresa</th>
                                        <th>Tvrtka</th>
                                        <th>Datum unosa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contact in Model)
                                    {
                                        <tr>
                                            <td>@contact.Id</td>
                                            <td>
                                                <strong>@contact.FirstName @contact.LastName</strong>
                                            </td>
                                            <td>
                                                <a href="mailto:@contact.Email" class="text-primary">
                                                    @contact.Email
                                                </a>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.Phone))
                                                {
                                                    <a href="tel:@contact.Phone" class="text-success">
                                                        @contact.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.Website))
                                                {
                                                    <a href="http://@contact.Website" target="_blank" class="text-info">
                                                        @contact.Website
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.AddressStreet) || !string.IsNullOrEmpty(contact.AddressCity))
                                                {
                                                    <small>
                                                        @if (!string.IsNullOrEmpty(contact.AddressStreet))
                                                        {
                                                            <div>@contact.AddressStreet @contact.AddressSuite</div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(contact.AddressCity))
                                                        {
                                                            <div>@contact.AddressCity @contact.AddressZipCode</div>
                                                        }
                                                        @if (contact.AddressLatitude is not null)
                                                        {
                                                            <div>GPS kordinate: 
                                                                @contact.AddressLatitude.Value.ToString(CultureInfo.InvariantCulture)
                                                                / 
                                                                @contact.AddressLongitude.Value.ToString(CultureInfo.InvariantCulture) 
                                                            </div>
                                                        }
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(contact.CompanyName))
                                                {
                                                    <small>
                                                        <strong>@contact.CompanyName</strong>
                                                        @if (!string.IsNullOrEmpty(contact.CompanyCatchPhrase))
                                                        {
                                                            <br />
                                            
                                                            <em>@contact.CompanyCatchPhrase</em>
                                                        }
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @contact.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="alert alert-info">
                                <strong>Ukupno kontakata s .biz email adresama: @Model.Count()</strong>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h4 class="text-muted">Nema kontakata</h4>
                            <p class="text-muted">Trenutno nema kontakata s .biz email adresama.</p>
                        </div>
                    }

                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-primary">
                            Dodaj novi kontakt
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        font-size: 0.9rem;
    }
    .table td {
        vertical-align: middle;
        font-size: 0.9rem;
    }
    .card {
        border: none;
        border-radius: 15px;
    }
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
</style>